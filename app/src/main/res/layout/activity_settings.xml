<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/LAYOUT__SETTINGS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/BTN__APPLY_SETTINGS"
        android:layout_width="165dp"
        android:layout_height="75dp"
        android:layout_centerInParent="true"
        android:text="@string/btn_label__apply_settings"
        android:textSize="16sp"
        android:layout_below="@id/LAYOUT__SETTINGS"
        android:layout_marginTop="20dp"
        app:backgroundTint="@color/primary_button"
        app:rippleColor="@color/primary_button_ripple" />
</RelativeLayout>